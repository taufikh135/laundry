            "post": {
                "tags": ["Auth"],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "number_phone": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    }
                                }
                            },
                            "example": {
                                "name": "John Doe",
                                "number_phone": "08123456789",
                                "password": "rahasia123"
                            }
                        }
                    }
                },

                "responses": {
                    "200": {
                        "content": {
                            "application/json": {
                                "example": {
                                    "success": true
                                }
                            }
                        }
                    },
                    "400": {
                        "content": {
                            "application/json": {
                                "example": {
                                    "success": false,
                                    "errors": {
                                        "{attribute}": ["{message}"]
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },

